{
  "name": "magnet-and-compass",
  "version": "1.0.0-rc.0",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/phetsims/magnet-and-compass.git"
  },
  "devDependencies": {
    "grunt": "~1.5.3"
  },
  "phet": {
    "requirejsNamespace": "MAGNET_AND_COMPASS",
    "simulation": true,
    "runnable": true,
    "supportedBrands": [
      "phet",
      "phet-io"
    ],
    "phetLibs": [
      "faradays-electromagnetic-lab"
    ],
    "phet-io": {
      "compareDesignedAPIChanges": true
    },
    "supportsOutputJS": true,
    "simFeatures": {
      "supportsSound": true,
      "supportsDynamicLocale": true,
      "supportsInteractiveDescription": true,
      "colorProfiles": [
        "default",
        "projector"
      ]
    }
  },
  "eslintConfig": {
    "extends": "../chipper/eslint/sim_eslintrc.js",
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "@typescript-eslint/ban-ts-comment": [
            "error",
            {
              "ts-expect-error": true,
              "ts-ignore": true,
              "ts-check": true,
              "ts-nocheck": true
            }
          ]
        }
      }
    ]
  }
}